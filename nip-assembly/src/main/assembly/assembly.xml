<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/3.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/3.0.0 http://maven.apache.org/xsd/assembly-3.0.0.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>nip-platform</baseDirectory>

    <!-- 打包所有子模块的 JAR 文件到 lib 目录 -->
    <moduleSets>
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>${project.build.directory}</directory>
                        <outputDirectory>lib</outputDirectory>
                        <includes>
                            <include>*.jar</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>

    <!-- 打包启动脚本到 bin 目录 -->
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/nip-web/src/main/resources/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>start.sh</include>
                <include>stop.sh</include>
            </includes>
        </fileSet>

        <!-- 打包配置文件到 conf 目录 -->
        <fileSet>
            <directory>${project.parent.basedir}/nip-web/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>application.properties</include>
                <include>logback.xml</include>
            </includes>
        </fileSet>

        <!-- 打包 apps 目录 -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/apps</directory>
            <outputDirectory>apps</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- 打包 logs 目录 -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/logs</directory>
            <outputDirectory>logs</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- 打包 plugins 目录 -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/plugins</directory>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- 打包 tmp 目录 -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/tmp</directory>
            <outputDirectory>tmp</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>